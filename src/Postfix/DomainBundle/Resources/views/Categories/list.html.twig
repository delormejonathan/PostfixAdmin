{% extends "PostfixDomainBundle:Categories:layout.html.twig" %}

{% block sub_body %}
	<h3>Categories</h3>
	{% include "::alert.html.twig" %}
	<table class="table table-striped table-condensed">
		<tr>
			<th>#</th>
			<th>Name</th>
			<th></th>
		</tr>
	{% for category in categories %}
		<tr>
			<td>{{ category.id }} </td>
			<td><strong>{{ category.name }}</strong></td>
			<td style="width:90px;text-align:center;">
				<a class="btn btn-primary btn-xs" href="{{ path('postfix_admin_categories_edit' , {'id': category.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
				<a data-toggle="confirm" class="btn btn-danger btn-xs" href="{{ path('postfix_admin_categories_delete' , {'id': category.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
			</td>
		</tr>
	{% else %}
		<tr><td colspan="4">No entries.</td></tr>
	{% endfor %}
	</table>
	<ul class="pagination">
		{% if nb_page == 0 %}
			{% set nb_page = 1 %}
		{% endif %}
		{% for p in range(1, nb_page) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('postfix_admin_categories_list', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
