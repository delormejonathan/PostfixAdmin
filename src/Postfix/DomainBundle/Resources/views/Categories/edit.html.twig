{% extends "PostfixDomainBundle:Categories:layout.html.twig" %}

{% block title %}
  {{ category.name }} | {{ parent() }}
{% endblock %}

{% block sub_body %}
{% include "::alert.html.twig" %}
<div id="edit">
	<h3>Edit a category</h3>
	<div class="row">
		<div class="col-lg-12">
			<div class="well">
				<form method="post" {{ form_enctype(form) }}>
					{{ form_widget(form) }}
					<div class="form-group">
						<button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<h3>Articles related</h3>
	<div class="row">
		<div class="col-lg-12">
			<table class="table table-striped table-condensed">
				<tr>
					<th>#</th>
					<th>Date</th>
					<th>Title</th>
					<th>Content</th>
					<th></th>
				</tr>
				{% for article in articles %}
				<tr>
					<td>{{ article.id }} </td>
					<td>{{ article.create|date('Y-d-m') }} </td>
					<td><strong>{{ article.title }}</strong></td>
					<td>{{ article.content|resume(100) }}</td>
					<td style="width:90px;text-align:center;">
						<a class="btn btn-primary btn-xs" href="{{ path('postfix_admin_articles_edit' , {'id': article.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
						<a data-toggle="confirm" class="btn btn-danger btn-xs" href="{{ path('postfix_admin_articles_delete' , {'id': article.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
					</td>
				</tr>
				{% else %}
				<tr><td colspan="4">No entries.</td></tr>
				{% endfor %}
			</table>
			<ul class="pagination">
				{% for p in range(1, nb_page) %}
					<li{% if p == page %} class="active"{% endif %}>
						<a href="{{ path('postfix_admin_categories_edit', { id : category.id , page : p }) }}">{{ p }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>



{% endblock %}