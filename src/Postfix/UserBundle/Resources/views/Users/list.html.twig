{% extends "PostfixUserBundle:Users:layout.html.twig" %}

{% block sub_body %}
	<h3>Utilisateurs</h3>
	{% include "::alert.html.twig" %}
	<table class="table table-striped table-condensed">
		<tr>
			<th>#</th>
			<th>Utilisateur</th>
			<th>Droit</th>
			<th></th>
		</tr>
	{% for user in users %}
		<tr>
			<td>{{ user.id }} </td>
			<td>{{ user.username }}</td>
			<td>{{ user.roles.0 }}</td>
			<td style="width:90px;text-align:center;">
				<a class="btn btn-primary btn-xs" href="{{ path('postfix_users_edit' , {'id': user.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
				<a data-toggle="confirm" class="btn btn-danger btn-xs" href="{{ path('postfix_users_delete' , {'id': user.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
			</td>
		</tr>
	{% else %}
		<tr><td colspan="4">Aucun utilisateur dans la base de donn√©es.</td></tr>
	{% endfor %}
	</table>
{% endblock %}