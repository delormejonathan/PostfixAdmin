{% extends "PostfixDomainBundle:Domains:layout.html.twig" %}

{% block sub_body %}
	<h3>Domaines</h3>
	{% include "::alert.html.twig" %}
	<table class="table table-striped table-condensed">
		<tr>
			<th>#</th>
			<th>Domaine</th>
			<th>Actif</th>
			<th>Date</th>
			<th></th>
		</tr>
	{% for domain in domains %}
		<tr>
			<td>{{ domain.id }} </td>
			<td><strong>{{ domain.name }}</strong></td>
			<td>{{ domain.active ? 'Oui' : 'Non' }} </td>
			<td>{{ domain.create|date('Y-d-m') }} </td>
			<td style="width:90px;text-align:center;">
				<a class="btn btn-primary btn-xs" href="{{ path('postfix_admin_domains_edit' , {'id': domain.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
				<a data-toggle="confirm" class="btn btn-danger btn-xs" href="{{ path('postfix_admin_domains_delete' , {'id': domain.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
			</td>
		</tr>
	{% else %}
		<tr><td colspan="4">Pas encore de domaine. <a href="{{ path ('postfix_admin_domains_add') }}">Ajouter un domaine ?</a></td></tr>
	{% endfor %}
	</table>
{% endblock %}