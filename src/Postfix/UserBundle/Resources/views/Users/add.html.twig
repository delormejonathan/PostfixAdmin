{% extends "PostfixUserBundle:Users:layout.html.twig" %}
 
{% block sub_body %}
<h3>Ajouter un utilisateur</h3>
<form method="post" {{ form_enctype(form) }}>
	{{ form_errors(form) }}
	<div class="well">
		<legend>Informations de connexion</legend>
		{{ form_row(form.username) }}
		{{ form_row(form.plainPassword) }}
		{{ form_row(form.roles) }}
		{{ form_rest(form) }}
		<div class="form-group">
			<button type="submit" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-floppy-disk"></span> Sauvegarder</button>
		</div>

	</div>
</form>

{% endblock %}